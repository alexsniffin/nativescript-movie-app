<Page loaded="pageloaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="Movie Details" class="action-bar">
	</ActionBar>
	<GridLayout rows="auto,*" height="100%" >
		<GridLayout row="0">
			<Label class="text-center"  text="{{ movie.productName }}" color="white" class="movie-label" id="movieLabel" />
		</GridLayout>
		<StackLayout row="1">
			<Label class="text-center" text="{{ movie.longDescription }}" color="white"  textWrap="true" class="customMovie" />
			<Image src="{{ movie.image }}" class="customImage" />
			<Label class="text-center"  text="{{ movie.year }}" color="white" class="customYear" />
		</StackLayout>
	</GridLayout>
</Page>