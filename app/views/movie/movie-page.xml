<Page loaded="pageloaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">

	<ActionBar title="Movie Details" class="action-bar">
	</ActionBar>
	<GridLayout rows="auto,*" height="100%" >
		<GridLayout row="0">
			<Label text="{{ movie.productName }}" class="movie-label" id="movieLabel" />
		</GridLayout>
		<StackLayout row="1">
			<Label text="{{ movie.longDescription }}"  textWrap="true" class="customMovie" />
			<Image src="{{ movie.image }}"  class="customImage" />
			<Label text="{{ movie.year }}" class="customYear" />
		</StackLayout>
	</GridLayout>
</Page>