<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<ActionBar title="mobileMovies" class="action-bar">
	</ActionBar>

	<StackLayout class="home-panel" id="myStack" backgroundColor="blue">
		<Label text="My Movie Collection" class="header-label" />
		<GridLayout rows="*" columns="auto,*,auto,*" height="60">
			<Label text="&#xe937;" class="icon" color="lightblue" tap="onUpcTap"
			textAlignment="left" row="0" col="0"/>
			<Label text="&#xea0a;" class="icon" color="lightblue" tap="onAddTap"
			textAlignment="right"  row="0" col="3" />
		</GridLayout>
		<ScrollView orientation="vertical">
			<StackLayout>
				<GridLayout columns="100p,200,100p" rows="*,*,*">
					<Image col="0" row="0" src="{{ img }}" tap="selectMovie" id="image0" rowSpan="2" />
					<Label col="1" row="0" text="{{ name }}" class="custom1" tap="selectMovie" id="name0" colSpan="2" />
					<Label col="1" row="1" textWrap="true" text="{{ description }}" tap="selectMovie"
					 class="custom2" id="desc0" colSpan="2" />
					<Label col="2" row="2" text="{{ year }}" class="custom3" tap="selectMovie" id="year0" />
				</GridLayout>
			</StackLayout>
		</ScrollView>
	</StackLayout>
</Page>