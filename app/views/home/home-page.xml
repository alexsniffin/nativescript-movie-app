<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<ActionBar title="mobileMovies" class="action-bar">
	</ActionBar>

	<StackLayout class="home-panel" id="myStack">
		<Label text="My Movie Collection" class="header-label" />
		<GridLayout rows="*" columns="auto,*,auto,*" height="60">
			<Label text="&#xe937;" class="icon" tap="onUpcTap" textAlignment="left" row="0" col="0"/>
			<Label text="&#xea0a;" class="icon" tap="onAddTap" textAlignment="right"  row="0" col="3" />
		</GridLayout>
		<ScrollView orientation="vertical">
				<ListView items="{{ observableMovies }}">
					<ListView.itemTemplate>
						<GridLayout columns="*,*,*" rows="*,*,*">
							<Image src= "{{ image }}" col="0" />
							<Label text="{{ productName || 'Default' }}" col="1" color="black" textWrap="true" />
							<Label text="{{ year || 'Default' }}" col="2" color="black" textWrap="true" />
						</GridLayout>
					</ListView.itemTemplate>
				</ListView>
		</ScrollView>
	</StackLayout>
</Page>