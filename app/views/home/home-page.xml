<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<ActionBar title="mobileMovies" class="action-bar">
	</ActionBar>

	<StackLayout class="home-panel" id="myStack">
		<Label text="My Movie Collection" class="header-label" color="white" textAlignment="center" />
		<GridLayout rows="*" columns="*,*,*,*" height="20" >
			<Label text="&#xe937;" class="icon" col="0" color="white" tap="onUpcTap" textAlignment="center" row="0" col="0"/>
			<Label text="&#xea0a;" class="icon" col="3" tap="onAddTap" color="white" textAlignment="center"  row="0" col="3" />
		</GridLayout>
		<StackLayout class="hr-light m-10"></StackLayout>
		<ScrollView orientation="vertical" height="100%">
				<ListView class="list-group" items="{{ observableMovies }}">
					<ListView.itemTemplate>
						<GridLayout class="list-group-item" columns="*,*,*,*">
							<Image src= "{{ image }}" size="auto" col="0" />
							<Button text="{{ productName || 'Default' }}" tap="onMovieTap" class="font-weight-bold" col="1" colSpan="2" color="white" textWrap="true" />
							<Label text="{{ year || 'Default' }}" col="3" class="font-weight-bold" color="white" textWrap="true" />
						</GridLayout>
					</ListView.itemTemplate>
				</ListView>
		</ScrollView>
	</StackLayout>
</Page>